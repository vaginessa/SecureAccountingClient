<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:defaultValue="@string/pref_default_monitor_interval"
        android:inputType="number"
        android:key="monitor_interval"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Monitor Interval (ms)" />
    
    <EditTextPreference
        android:defaultValue="@string/pref_default_data_rate"
        android:inputType="number"
        android:key="data_rate"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Data Rate (kbps)" />
    
    

</PreferenceScreen>
