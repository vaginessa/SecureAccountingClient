<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_probing_method_titles"
        android:entryValues="@array/pref_probing_method_values"
        android:key="probing_method"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Probing Method" />
    
    
    <EditTextPreference
        android:defaultValue="@string/pref_default_probing_thres_loss"
        android:inputType="number"
        android:key="probing_thres_loss"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Probing Threshold Loss (# of Pkts)" />
    
    <EditTextPreference
        android:defaultValue="@string/pref_default_probing_rate"
        android:inputType="number"
        android:key="probing_rate"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Probing Rate (kbps)" />
    
    <EditTextPreference
        android:defaultValue="@string/pref_default_probing_thres_rate"
        android:inputType="number"
        android:key="probing_thres_rate"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Probing Threshold Rate (kbps)" />
    
    
    <EditTextPreference
        android:defaultValue="@string/pref_default_probing_check_interval"
        android:inputType="number"
        android:key="probing_check_interval"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Probing Check Interval (ms)" />

</PreferenceScreen>
